<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="0dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_my_calendar" />

        <TextView
            android:id="@+id/text_main_sch"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/text_main_sch"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#ff7700"
            android:padding="1dp"
            android:src="@android:drawable/ic_lock_silent_mode" />

        <TextView
            android:id="@+id/text_main_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/text_main_notice"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_survey"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_first" />

        <ImageButton
            android:id="@+id/imgbtn_rsc"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_second" />

        <ImageButton
            android:id="@+id/imgbtn_gallery"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_third" />
    </LinearLayout>
</LinearLayout>